{
    "name": "qwatos/bitcoin-utility",
    "description": "PHP console utility to control your Bitcoin addresses on your own",
	"keywords": ["bitcoin", "blockchain", "PHP", "wallet"],
    "type": "project",
	"homepage": "https://github.com/qwatos/bitcoin-utility",
    "license": "MIT",
    "authors": [
        {
			"name": "qwatos",
			"homepage": "https://github.com/qwatos",
			"role": "Author"
        }
    ],
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "ext-gmp": "*",
        "ext-zip": "*",
		"blockchain/blockchain": "*",
        "bitwasp/bitcoin": "*",
        "phpseclib/mcrypt_compat": "*",
		"symfony/console": "^4.1",
		"symfony/dotenv": "^4.1",
		"symfony/flex": "^1.0",
		"symfony/framework-bundle": "^4.1",
		"symfony/yaml": "^4.1"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
